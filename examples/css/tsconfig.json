{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "lib": ["es2019", "dom"], // Add 'dom' for browser-related types
        "target": "es2019", // Ensure your target is compatible
        "module": "ESNext",
        "noEmit": true,
        "jsx": "preserve", // Keep JSX syntax in the output for custom transformation
        "jsxFactory": "createElement", // Match your jsxFactory in esbuild
        "jsxFragmentFactory": "FRAGMENT",
        "moduleResolution": "bundler",
        "strictNullChecks": true,
        "paths": {
            "@/*": ["../../build/"]
        }
    },
    "exclude": ["node_modules", "dist"] // Exclude generated and third-party files
}
